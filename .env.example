# Server runtime
PORT=8787
MAX_REQUESTS_PER_DAY=5

# Gemini integration (optional)
ENABLE_GEMINI=false
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Persistence files (mounted volume recommended in production)
COUNTERS_FILE=rate-counters.json
DB_FILE=chat-db.json

# Static serving
STATIC_DIR=dist
STATIC_INDEX=index.html

# CORS
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET, HEAD, POST, OPTIONS
CORS_ALLOW_HEADERS=Content-Type

# Vite (development only)
VITE_DEV_PORT=3000
VITE_API_PORT=8787
